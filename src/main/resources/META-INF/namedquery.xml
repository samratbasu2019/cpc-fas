	<named-query name="GET_STUDENT_DETAILS">
		<query>SELECT NEW com.infy.cpc.fas.model.StudentDetails (a.id, a.name, a.dob, a.sex, b.address, b.landmark) FROM User a INNER JOIN Address b ON a.id=b.userid and a.id= :id</query>
	</named-query>
	
	<named-query name="GET_STUDENT_DETAILS_HQL">
		<query>SELECT b FROM User b WHERE b.id = :id</query>
	</named-query>
	<named-query name="GET_ADDRESS_DETAILS_HQL">
		<query>SELECT b FROM Address b WHERE b.userid = :id</query>
	</named-query>
